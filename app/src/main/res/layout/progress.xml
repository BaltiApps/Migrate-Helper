<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_bg_portrait"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/restore_top_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="20dp">


        <ImageView
            android:id="@+id/logoIcon"
            android:layout_width="@dimen/small_icon_wh"
            android:layout_height="@dimen/small_icon_wh"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_waiting" />

        <TextView
            android:id="@+id/messageHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="@string/please_wait"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/progressPercentage"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="--"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/large_padding_width">

        <TextView
            android:id="@+id/messageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/log_message"
            android:fontFamily="monospace"
            android:padding="@dimen/large_padding_width"
            android:scrollbars="vertical"
            android:textColor="@android:color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/errorLogTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingTop="@dimen/small_padding_width"
                android:scrollbars="vertical"
                android:textColor="@android:color/holo_red_dark" />

        </ScrollView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_warning"
            android:drawablePadding="@dimen/small_padding_width"
            android:gravity="center_vertical"
            android:text="@string/minimizing_may_decrease_speed"
            android:textSize="13sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/restore_bottom_button_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/large_padding_width"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reportLogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/report"
            android:textColor="@color/colorAccent"
            android:visibility="gone" />

        <Button
            android:id="@+id/cancelRestore"
            android:layout_width="@dimen/log_button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/cancel_restore"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/abort"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark" />

        <Button
            android:id="@+id/close"
            android:layout_width="@dimen/log_button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/log_action_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/minimize"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark" />

        <Button
            android:id="@+id/okOnFinish"
            android:layout_width="@dimen/log_button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/log_action_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@android:string/ok"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
            android:visibility="gone" />


    </LinearLayout>


</LinearLayout>