<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">


    <ImageView
        android:id="@+id/extra_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/small_padding_width"
        android:padding="@dimen/large_padding_width" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/large_padding_width">

        <TextView
            android:id="@+id/extra_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Extra name"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/extra_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Extra description"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>


    <CheckBox
        android:id="@+id/extras_item_select"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/large_padding_width" />

</LinearLayout>