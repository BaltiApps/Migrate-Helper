<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="balti.migratehelper.MainActivity"
    android:background="@drawable/helper_portrait"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/close_button"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingStart="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center"
        >


            <Button
                android:id="@+id/restoreSu"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:text="@string/restore_all"
                android:background="@drawable/restore_button"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/disable"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="@string/uninstallOrDisable"
                android:background="@drawable/uninstall_button"
                />

        </LinearLayout>


</LinearLayout>
