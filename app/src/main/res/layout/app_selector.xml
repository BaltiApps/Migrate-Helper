<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_list_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/large_padding_width">

        <ImageButton
            android:id="@+id/app_selecter_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/app_selector_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="@string/select_apps"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/app_selector_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/waiting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/large_padding_width">

            <ProgressBar
                android:id="@+id/just_a_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/app_selector_error_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/just_a_progress"
                android:layout_alignTop="@id/just_a_progress"
                android:layout_alignEnd="@id/just_a_progress"
                android:layout_alignBottom="@id/just_a_progress"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_error"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/waiting_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/just_a_progress"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/large_padding_width"
                android:text="@string/please_wait"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/waiting_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/waiting_status_text"
                android:layout_centerHorizontal="true"
                android:text="@string/initMessageShort" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/restore_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/extras_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/large_padding_width"
                    android:paddingEnd="@dimen/large_padding_width">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/extras"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_edit" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <CheckBox
                        android:id="@+id/extras_select"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/small_padding_width" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_checkbox_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/large_padding_width"
                    android:paddingEnd="@dimen/large_padding_width">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/apps"
                        android:textAppearance="?android:attr/textAppearanceMedium" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/large_padding_width"
                        android:paddingEnd="@dimen/large_padding_width">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app" />

                        <CheckBox
                            android:id="@+id/appAllSelect"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/large_padding_width"
                        android:paddingEnd="@dimen/large_padding_width">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/data" />

                        <CheckBox
                            android:id="@+id/dataAllSelect"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/large_padding_width"
                        android:paddingEnd="@dimen/large_padding_width">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/perm" />

                        <CheckBox
                            android:id="@+id/permissionsAllSelect"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom" />

                    </LinearLayout>

                </LinearLayout>


                <ListView
                    android:id="@+id/app_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>

            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/restore_selected"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cancel_root_request"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/large_padding_width"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/clear_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/restore_selected"
            android:layout_alignBottom="@id/restore_selected"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:src="@drawable/ic_clear_all" />

        <ImageButton
            android:id="@+id/select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/restore_selected"
            android:layout_alignBottom="@id/restore_selected"
            android:layout_toEndOf="@id/clear_all"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:src="@drawable/ic_select_all" />

    </RelativeLayout>


</LinearLayout>