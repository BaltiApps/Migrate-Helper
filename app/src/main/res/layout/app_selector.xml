<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/app_selecter_back_button"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_apps"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingStart="10dp"
            android:id="@+id/app_selector_title"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="end"
        android:background="@color/colorPrimary"
        android:id="@+id/checkbox_bar"
        android:paddingEnd="@dimen/large_padding_width"
        android:paddingStart="@dimen/large_padding_width"
        >

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/appCheckboxView"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/appAllSelect"
                    android:gravity="bottom"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/dataCheckboxView"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/data"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/dataAllSelect"
                    android:gravity="bottom"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    />

            </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/app_selector_content"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding_width"
            android:id="@+id/waiting_layout"
            android:layout_centerVertical="true"
            >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/just_a_progress"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_error"
                android:layout_centerHorizontal="true"
                android:layout_alignStart="@id/just_a_progress"
                android:layout_alignEnd="@id/just_a_progress"
                android:layout_alignTop="@id/just_a_progress"
                android:layout_alignBottom="@id/just_a_progress"
                android:visibility="invisible"
                android:id="@+id/app_selector_error_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_wait"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="@dimen/large_padding_width"
                android:id="@+id/waiting_status_text"
                android:layout_below="@id/just_a_progress"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/initMessageShort"
                android:layout_below="@id/waiting_status_text"
                android:layout_centerHorizontal="true"
                android:id="@+id/waiting_messages"
                />

        </RelativeLayout>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_list"
            android:visibility="gone"
            >

        </ListView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/bottom_bar"
        >

        <TextView
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/large_padding_width"
            android:background="@drawable/ic_normal_button"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/restore_selected"
            android:textColor="@android:color/white"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_all"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/clear_all"
            android:layout_alignTop="@id/restore_selected"
            android:layout_alignBottom="@id/restore_selected"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_select_all"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/select_all"
            android:layout_alignTop="@id/restore_selected"
            android:layout_alignBottom="@id/restore_selected"
            android:layout_toEndOf="@id/clear_all"
            />

    </RelativeLayout>


</LinearLayout>